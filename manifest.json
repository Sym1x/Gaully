{
  "manifest_version": 3,
  "name": "Gaully Accessibility",
  "description": "Accessibility tools: color-blindness simulation, dyslexia font, high contrast, and text-to-speech.",
  "version": "2.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gaully Accessibility"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["filters.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}